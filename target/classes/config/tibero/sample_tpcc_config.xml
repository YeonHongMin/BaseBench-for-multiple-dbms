<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>TIBERO</type>
    <driver>com.tmax.tibero.jdbc.TbDriver</driver>
    <url>jdbc:tibero:thin:@localhost:8629:tibero</url>
    <username>benchbase</username>
    <password>password</password>
    <reconnectOnConnectionFailure>true</reconnectOnConnectionFailure>
    <!-- TRANSACTION_SERIALIZABLE/TRANSACTION_READ_COMMITTED -->
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    <batchsize>128</batchsize>
    <loaderThreads>1</loaderThreads>

    <!-- Connection Pool Settings (Optional) -->
    <connectionPool>
        <enabled>true</enabled>
        <dynamicSizing>true</dynamicSizing>
    </connectionPool>

    <!-- Scale factor is the number of warehouses in TPCC -->
    <scalefactor>1</scalefactor>

    <!-- The workload -->
    <terminals>4</terminals>
    <works>
        <work>
            <time>60</time>
            <rate>10000</rate>
            <weights>45,43,4,4,4</weights>
        </work>
    </works>

    <!-- TPCC specific -->
    <transactiontypes>
        <transactiontype>
            <name>NewOrder</name>
        </transactiontype>
        <transactiontype>
            <name>Payment</name>
        </transactiontype>
        <transactiontype>
            <name>OrderStatus</name>
        </transactiontype>
        <transactiontype>
            <name>Delivery</name>
        </transactiontype>
        <transactiontype>
            <name>StockLevel</name>
        </transactiontype>
    </transactiontypes>
</parameters>
